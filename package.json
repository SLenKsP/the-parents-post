    "jsonwebtoken": "^8.5.1",
    "materialize-css": "^1.0.0",
    "mongoose": "^5.3.16",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "react-materialize": "^3.5.9",
